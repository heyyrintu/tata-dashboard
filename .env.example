# ================================
# TATA Dashboard - Environment Variables
# Copy this file to .env and fill in your values
# ================================

# ================================
# Database Configuration (PostgreSQL)
# ================================
POSTGRES_USER=tata_admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=tata_dashboard

# ================================
# Application URLs
# ================================
# Frontend URL (used for CORS)
FRONTEND_URL=http://localhost

# API URL for frontend (relative or absolute)
# Use /api for same-domain deployment
# Use http://yourdomain.com/api for different domain
VITE_API_URL=/api

# ================================
# Port Configuration
# ================================
HTTP_PORT=80
HTTPS_PORT=443

# ================================
# Appwrite Authentication (Optional)
# Get these from your Appwrite console
# ================================
VITE_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your_project_id
VITE_APPWRITE_ADMIN_TEAM_ID=your_team_id

# ================================
# Logo URL (Optional)
# ================================
VITE_LOGO_URL=

# ================================
# IMAP Email Service Configuration (Optional)
# For automated email-based file upload via IMAP
# ================================
IMAP_HOST=imap.hostinger.com
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=
IMAP_ALLOWED_SENDER=
IMAP_ARCHIVE_FOLDER=Processed
EMAIL_POLL_INTERVAL=600000
