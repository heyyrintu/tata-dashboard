# ================================
# TATA Dashboard - Environment Variables
# Copy this file to .env and fill in your values
# ================================

# ================================
# Database Configuration
# ================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here

# ================================
# Application URLs
# ================================
# Frontend URL (used for CORS)
FRONTEND_URL=http://localhost

# API URL for frontend (relative or absolute)
# Use /api for same-domain deployment
# Use http://yourdomain.com/api for different domain
VITE_API_URL=/api

# ================================
# Port Configuration
# ================================
HTTP_PORT=80
HTTPS_PORT=443

# ================================
# Appwrite Authentication (Optional)
# Get these from your Appwrite console
# ================================
VITE_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your_project_id
VITE_APPWRITE_ADMIN_TEAM_ID=your_team_id

# ================================
# Email Service Configuration (Optional)
# For automated email-based file upload
# See backend/AZURE_SETUP.md for setup instructions
# ================================
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_TENANT_ID=
OUTLOOK_UPLOAD_EMAIL=upload@yourdomain.com
OUTLOOK_ARCHIVE_FOLDER=Processed
OUTLOOK_POLL_INTERVAL=600000
