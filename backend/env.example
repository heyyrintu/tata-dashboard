NODE_ENV=development
PORT=5000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tata_dashboard
# For production use a secure password:
# DATABASE_URL=postgresql://username:password@host:5432/tata_dashboard

# Frontend URL (used for CORS)
FRONTEND_URL=http://localhost:5173

# API Key for authentication (optional - if not set, all requests are allowed in dev)
# API_KEY=your-secure-api-key-here

# IMAP Email Configuration (Optional)
IMAP_HOST=imap.hostinger.com
IMAP_PORT=993
IMAP_USER=your-email@example.com
IMAP_PASSWORD=your-imap-password
IMAP_ALLOWED_SENDER=sender@example.com
# Comma-separated list of allowed sender email addresses (optional)
# Leave empty to allow all senders
IMAP_ARCHIVE_FOLDER=Processed
EMAIL_POLL_INTERVAL=600000
# Poll interval in milliseconds (600000 = 10 minutes)
